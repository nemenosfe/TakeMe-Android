<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pes.takemelegends.Activity.PreferencesActivity">+

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:title="ConfiguraciÃ³n">
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        app:layout_heightPercent="78%"
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollPreferences"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:text="@string/text_wellcome_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:layout_margin="15dp"
            style="@style/h1"
            />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@color/main_ambar"
                    android:id="@+id/layoutDivider1"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:text="@string/text_main_preferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    style="@style/h2"/>

            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/chkFootball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_football" />

                <CheckBox
                    android:id="@+id/chkBasketball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_basketball" />

                <CheckBox
                    android:id="@+id/chkAllSports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_all" />

                <CheckBox
                    android:id="@+id/chkConcerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_concerts" />

                <CheckBox
                    android:id="@+id/chkPaints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_painting" />

                <CheckBox
                    android:id="@+id/chkTheaters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_theater" />

                <CheckBox
                    android:id="@+id/chkMovies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_movies" />

                <CheckBox
                    android:id="@+id/chkOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pteferences_others" />

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@color/main_ambar"
                    android:id="@+id/layoutDivider2"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:text="@string/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    style="@style/h2"/>

            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:text="@string/text_cities_of_interes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView12"
                    android:padding="5dp"
                    style="@style/p"/>


                <TextView
                    android:text="@string/pteferences_all_cities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_selected_cities"
                    android:background="@drawable/button_takeme_grey"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@color/main_ambar"
                    android:id="@+id/layoutDivider3"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:text="@string/text_timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:background="@color/white"
                    style="@style/h2"/>

            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Switch
                    android:id="@+id/preferences_monday_to_thursdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_timetable_monday_to_thursdays" />

                <Switch
                    android:id="@+id/preferences_friday_to_sundays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/text_timetable_friday_to_sundays" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_heightPercent="22%"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_below="@+id/scrollPreferences">

        <Button
            android:text="@string/pteferences_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_skip"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_takeme_grey"
            style="@style/h1white"
            />

        <Button
            android:text="@string/pteferences_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_save"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_takeme"
            style="@style/h1"
            />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
