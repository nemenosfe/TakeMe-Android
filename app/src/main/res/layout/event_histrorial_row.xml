<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/colorPrimary"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/drawer_border_red"
        android:layout_height="wrap_content">



        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/imageEvent">


            <TextView
                android:text="3000\nTakes"
                android:layout_height="70dp"
                android:textAlignment="center"
                app:layout_widthPercent="15%"
                android:gravity="center_vertical"
                android:background="@drawable/drawer_red"
                android:textColor="@color/white"
                android:id="@+id/takes"
                android:layout_gravity="center_horizontal"
                 />




            <TextView
                android:text="Recompensa\nno adquirida."
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                app:layout_widthPercent="35%"
                android:id="@+id/status"
                android:layout_toRightOf="@id/takes" />


            <LinearLayout
                android:orientation="vertical"
                app:layout_widthPercent="55%"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/status"
                android:layout_weight="1">

                <TextView
                    android:text="Nombro del eventp"
                    style="@style/p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" />

                <TextView
                    android:text="Descripcion del evento y lo que toque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/small"
                    android:id="@+id/textView8" />

                <TextView
                    android:text="10/12/2016"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/small"
                    android:id="@+id/textView9" />
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>